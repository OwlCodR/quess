<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VoteNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Alert Dialog -->
        <item name="alertDialogStyle">@style/RoundedOverlayAlertDialog</item>
    </style>

    <style name="Theme.VoteNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.VoteNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.VoteNote.TextAppearance.Black" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
    </style>

    <style name="Theme.VoteNote.TextAppearance.Gray" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="Theme.VoteNote.Fullscreen" parent="Theme.VoteNote">
        <item name="android:actionBarStyle">@style/Widget.Theme.VoteNote.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>