<resources>

    <style name="Widget.Theme.VoteNote.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.VoteNote.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.CustomInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorControlActivated">@color/gray</item>
        <item name="boxStrokeColor">@color/input_item</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="startIconTint">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="fontFamily">@font/proxima_nova_light</item>

        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">0.7dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.SmallText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.SmallTextClickable" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="RoundedOverlayAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>
</resources>